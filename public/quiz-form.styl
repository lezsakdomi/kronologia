.row
	display flex
	align-items center

.slip-reordering
	box-shadow 0px 0px 0px 1px rgba(128, 128, 128, 0.2)

input[name="title"]
	font-size xx-large
	margin 0.3em
	border none
	width 'calc(100% - 2 * %s)' % @margin

.remove
	background url("/trash.svg") // Licensed with CreativeCommons to FontAwesome.
	background-size contain
	background-position center
	background-repeat no-repeat
	width 1em
